<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.securestorage">

    <application
        android:name="com.example.securestorage.activity.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_round_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SecureStorage">
        <activity android:name="com.example.securestorage.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.securestorage.activity.HomeActivity"></activity>
        <activity android:name="com.example.securestorage.activity.SignupActivity"></activity>
        <activity android:name="com.example.securestorage.activity.SaveCardInfoActivity"></activity>
        <activity android:name="com.example.securestorage.activity.CardDetailsActivity"></activity>
    </application>

</manifest>